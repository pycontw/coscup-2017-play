@import url('https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css')
@import "_variable"
@import url('https://fonts.googleapis.com/css?family=Abel|Advent+Pro|Cantata+One|Noto+Sans')

html,body
  height:100%
  min-height: 100%
body
  font-family: 'Abel'
  margin: 0;
  background-color: #F7F5FA

.content--wrapper
  .subPage
    min-height: 300px
    text-align: center
    display: flex
    flex-direction: column
    justify-content: center
    color: white
    &.hidden
      display: none

    @media screen and (max-width: $mobile-screen-width)
      min-height: 150px
      justify-content: flex-start
    .mobile.subpage--title
      display: none
      height: 75px
      background-image: linear-gradient(104deg, #3b097b, #192660)
      flex-direction: column
      justify-content: center
      @media screen and (max-width: $mobile-screen-width)
        display: flex
      .title--text
        font-size: 1.25 rem

    .desktop.subpage--title
      line-height: 60px
      font-size: 2.5rem
      .title--text
        height: 100%

      @media screen and (max-width: $mobile-screen-width)
        display: none

      .divider
        margin:  auto
        width: 50px
        height: 5px
        background-color: black


#app
  position: relative
  overflow hidden
  &:before
    content: ''
    position: absolute
    z-index: -1
    top: 110px
    left: 10px
    width: 100px
    height: 100px
    background-size: cover
    background-repeat: no-repeat
    background-image: url('assets/BlueCircle.svg')
    background-position: center
  &:after
    content: ''
    position: absolute
    z-index: -1
    bottom: -200px
    right: -200px
    width: 500px
    height: 500px
    background-size: cover
    background-repeat: no-repeat
    background-image: url('assets/YellowCircle.svg')
    background-position: center
